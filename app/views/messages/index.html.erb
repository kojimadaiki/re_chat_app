<div class="wrapper">
  <div class="side-bar">
    <%= render "side_bar" %>
    <div class="side-bar-top">
      <div class="side-bar-top-left">
        <%= link_to current_user.name, edit_user_path(current_user) %>
      </div>
      <div class="side-bar-top-right">
        <a href="#">チャットを作成する</a>
      </div>
    </div>
    <div class="side-bar-main">
      <div class="room">
        <a href="#">room1</a>
      </div>
      <div class="room">
        <a href="#">room2</a>
      </div>
    </div>
  </div>
  <div class="chat">
    <%= render "main_chat" %>
    <div class="chat-top">
      <div class="chat-top-left">
        hogefuga
      </div>
      <div class="chat-top-right">
        <a href="#">チャットを終了する</a>
      </div>
    </div>
    <div class="chat-main">
      <div class="name-date">
        <div class="name">
          <p>Tom</p>
        </div>
        <div class="date">
          2020/3/31(Wed) 12:43:30
        </div>
      </div>
      <div class="text">
        <p>おはよう</p>
      </div>
      <div class="name-date">
        <div class="name">
          <p>Kevin</p>
        </div>
        <div class="date">
          2020/3/31(Wed) 12:43:30
        </div>
      </div>
      <div class="text">
        <p>おつかれ</p>
      </div>
    </div>
    <div class="chat-bottom">
      <div class="form">
        <input type="text" placeholder="type a message" class="form-left">
        <label class="form-image">
          <span class="image-file">画像</span>
          <input type="file" class="hidden">
        </label>
      </div>
      <input type="submit" value="送信" class="form-right">
    </div>
  </div>
</div>