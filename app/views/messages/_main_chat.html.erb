<div class="chat">
  <div class="chat-top">
    <div class="chat-top-left">
      hogefuga
    </div>
    <div class="chat-top-right">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
  <div class="chat-main">
    <div class="name-date">
      <div class="name">
      <p>Tom</p>
      </div>
      <div class="date">
        2020/3/31(Wed) 12:43:30
      </div>
    </div>
    <div class="text">
      <p>おはよう</p>
    </div>
    <div class="name-date">
      <div class="name">
        <p>Kevin</p>
      </div>
      <div class="date">
        2020/3/31(Wed) 12:43:30
      </div>
    </div>
    <div class="text">
      <p>おつかれ</p>
    </div>
  </div>
  <%= form_with model: [@room, @message], class: 'chat-bottom', local: true do |f| %>
    <div class="form">
      <%= f.text_field :content, class: 'form-left', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
    <%= f.submit '送信', class: 'form-right' %>
  <% end %>
</div>